{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
